{
  "scripts": {
    "build": "tailwind -i resources/styles/main.css -o static/main.css -m",
    "watch-tailwind": "tailwind -i resources/styles/main.css -o static/main.css -w",
    "watch-zola": "zola serve",
    "watch": "concurrently -n 'zola,tailwind' -c 'bgBlue.bold,bgMagenta.bold' 'npm:watch-zola' 'npm:watch-tailwind'"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.3.4",
    "concurrently": "^6.2.1",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.15"
  }
}
