{
  "scripts": {
    "build-tailwind": "tailwind -i resources/styles/main.css -o static/main.css -m",
    "build-zola": "zola build",
    "build": "npm run build-tailwind && npm run build-zola",
    "watch-tailwind": "tailwind -i resources/styles/main.css -o static/main.css -w",
    "watch-zola": "zola serve",
    "watch": "concurrently --names='zola,tailwind' --prefix-colors='bgBlue.bold,bgMagenta.bold' --restart-tries=-1 'npm:watch-zola' 'npm:watch-tailwind'"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^17.0.41",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.2.1",
    "postcss": "^8.4.4",
    "tailwindcss": "^3.1.6"
  }
}
